<link href="/static/css/singleton.css" rel="stylesheet" type="text/css" />

<div tal:condition="node_group">
  <div id="title">
  <span class="title_type">NODE GROUP</span><span class="title_name">${node_group.node_group_name}</span>
  </div>

  <ul class="tabs">
    <li>
      <input type="radio" checked name="tabs" id="tab1">
      <label for="tab1">Node Group</label>
      <div id="tab-content1" class="tab-content">
        Node Group Name: <span class="mono">${node_group.node_group_name}</span><br>
        Node Group ID: <span class="mono">${node_group.node_group_id}</span><br>
        Description: <span class="mono">${node_group.description}</span><br>
        Owner: <span class="mono">${node_group.node_group_owner}</span><br>
        Created At: <span class="mono">${node_group.created}</span><br>
        Updated At: <span class="mono">${node_group.updated}</span><br>
        Updated By: <span class="mono">${node_group.updated_by}</span><br>
      </div>
    </li>
  </ul>
</div>

<div tal:condition="not node_group">
  <div id="title">
  <span class="title_type">NODE GROUP</span><span class="title_name">Not Found</span>
  </div>
</div>
