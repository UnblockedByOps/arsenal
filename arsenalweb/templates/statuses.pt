<div metal:use-macro="layout">
    <div metal:fill-slot="content">

<script type="text/javascript">
  $(document).ajaxStart(function() {
    $("#select_object").hide();
    $("#content_insert").html('<div id="loading_image_c"><img src="/static/img/ajax-loader.gif"></div>');
  });
  
  $(document).ready(function() {

    // Menu for selecting columns to show
    $("#columns_menu_btn").click(function(){
      $(".columns_menu").slideToggle();
    });

    $('.columns_menu_content :checkbox').change(function(){
//       var cols = $(this).attr("name").split("_", 2);
//       $('td:nth-child(' + cols[1] + '),th:nth-child(' + cols[1] + ')').toggle();
      var cols = $(this).attr("name").split("-", 2);
      $(".sr-" + cols[1]).toggle('slide', {
            direction: 'left'
        }, 500);
      console.log(".sr_" + cols[1]);

        if ($(this).is(':checked'))
        {
            // do something
//alert( $(this).attr("name") );

        }
        else
        {
            // do something else
        }
    });

    $('.lower_pane').click(function(event){
        event.preventDefault();
        var url = $(this).attr('href');
        $.ajax({
            url: url,
            success: function(result){
              $("#content_insert").html(result);
            },
            error: function (jXHR, textStatus, errorThrown) {
              $("#content_insert").html(errorThrown);
            }
        });
    });

  });
</script>


  <div id="panel_c">
    <div class="wrap">
      <div class="resizable resizable1">
        <div class="content_c">
          <div class="content">
            <div id="search_results">

              <table id="searchResultsTable" class="tablesorter sar-table">
                <thead>
                  <tr>
                    <th class="sr-status_id"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Status ID</span></div></th>
                    <th class="sr-status_name"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Status Name</span></div></th>
                    <th class="sr-description"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Description</span></div></th>
                    <th class="sr-updated_by"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Updated By</span></div></th>
                    <th class="sr-last_update"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Last Update</span></div></th>
                  </tr>
                </thead>
                <tbody>
                  <tr tal:repeat="item statuses">
                    <td class="sr-status_id" tal:content="item.status_id">0</td>
                    <td class="sr-status_name"><a class="lower_pane" tal:attributes="href '/statuses/{0}'.format(item.status_id)" tal:content="item.status_name">initializing</a></td>
                    <td class="sr-description" tal:content="item.description">Description.</td>
                    <td tal:content="item.updated_by">2015/04/23 21:02:15</td>
                    <td tal:content="item.updated">2015/04/23 21:02:15</td>
                  </tr>
                </tbody>
              </table>
  
            </div> <!-- search_results -->
          </div> <!-- content -->
        </div> <!-- content_c -->
      </div> <!-- resizable1 -->
  
      <div class="resizable resizable2">
        <div class="content_c">
          <div class="content">
      
            <div id="content_insert">
              <h3 id="select_object">Select an object above</h3>
            </div> <!-- content_insert -->
          </div> <!-- content -->
        </div> <!-- content_c -->
      </div> <!-- resizable2 -->
    </div> <!-- wrap -->
  </div> <!-- panel_c -->

  </div> <!-- metal -->
</div> <!-- metal -->
