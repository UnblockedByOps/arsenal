<div metal:use-macro="layout">
    <div metal:fill-slot="content">


  <div id="panel_c">
    <div class="wrap">
      <div class="resizable resizable1">
        <div class="content_c">
          <div class="content">
            <div id="search_results">

              <table id="searchResultsTable" class="tablesorter sar-table">
                <thead>
                  <tr>
                    <th class="sr-node_group_id"><div class="table_header_c ta_right_th"><div class="drag-handle"></div><span class="table_header">Node Group ID</span></div></th>
                    <th class="sr-node_group_name"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Node Group Name</span></div></th>
                    <th class="sr-node_group_description"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Node Group Description</span></div></th>
                    <th class="sr-owner"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Node Group Owner</span></div></th>
                    <th class="sr-notes_url"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Notes Url</span></div></th>
                    <th class="sr-updated_by"><div class="table_header_c"><div class="drag-handle"></div><span class="table_header">Updated By</span></div></th>
                    <th class="sr-updated"><div class="table_header_c ta_right_th"><div class="drag-handle"></div><span class="table_header">Date Updated</span></div></th>
                    <th class="sr-created"><div class="table_header_c ta_right_th"><div class="drag-handle"></div><span class="table_header">Date Created</span></div></th>
                  </tr>
                </thead>
                <tbody>
                  <tr tal:repeat="item node_groups">
                    <td class="sr-node_group_id ta_right"><a class="lower_pane" tal:attributes="href '/node_groups/{0}'.format(item.id)" tal:content="item.id">0</a></td>
                    <td class="sr-node_group_name"><a class="lower_pane" tal:attributes="href '/node_groups/{0}'.format(item.id)" tal:content="item.name">default_install</a></td>
                    <td class="sr-node_group_description" tal:content="item.description">Some description</td>
                    <td class="sr-node_group_owner"><a class="lower_pane" tal:attributes="href '/node_groups/{0}'.format(item.id)" tal:content="item.owner">someemail@somedomain.com</a></td>
                    <td class="sr-notes_url"><a target="_blank" tal:attributes="href '{0}'.format(item.notes_url)" tal:content="item.notes_url">https://something.somedomain.com</a></td>
                    <td class="sr-updated_by" tal:content="item.updated_by">Admin</td>
                    <td class="sr-updated ta_right" tal:content="item.updated">2015/04/23 21:02:15</td>
                    <td class="sr-created ta_right" tal:content="item.created">2015/04/23 21:02:15</td>
                  </tr>
                </tbody>
              </table>
  
            </div> <!-- search_results -->
          </div> <!-- content -->
        </div> <!-- content_c -->
      </div> <!-- resizable1 -->
  
      <div class="resizable resizable2">
        <div class="content_c">
          <div class="content">
      
            <div id="content_insert">
              <h3 id="select_object">Select an object above</h3>
            </div> <!-- content_insert -->
          </div> <!-- content -->
        </div> <!-- content_c -->
      </div> <!-- resizable2 -->
    </div> <!-- wrap -->
  </div> <!-- panel_c -->

  </div> <!-- metal -->
</div> <!-- metal -->
