<!DOCTYPE html>
<html lang="en-US"
      xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:define-macro="layout">
  <head profile="http://www.w3.org/2005/10/profile">
    <link rel="icon"
        type="image/png"
        href="/static/img/favico.png?v=3">
    <link href="/static/css/arsenal.css" rel="stylesheet" type="text/css" />
    <link href="/static/css/singleton.css" rel="stylesheet" type="text/css" />
    <script src="/static/js/jquery-2.1.3.min.js"></script>
    <script src="/static/js/jquery-ui.min.js"></script>
    <script src="/static/js/jquery.dragtable.js"></script>
    <script src="/static/js/jquery.tablesorter.min.js"></script>
    <script src="/static/js/resizable.js"></script>
  </head>
  <body>
    
    <div tal:condition="node_group">
      <div id="page_title_s">
        <span class="page_title_type_s">objects/node_group/</span> <span class="page_title_name_s">${node_group.name}</span>
      </div>
    
      <ul class="tabs">
        <li>
          <input type="radio" checked name="tabs" id="tab1">
          <label for="tab1">Node Group</label>
          <div id="tab-content1" class="tab-content">
            <a tal:attributes="href '/nodes?node_group_id={0}'.format(node_group.id)">Search for nodes with this node group</a><br>
            <table>
                <tr>
                    <td>Name</td><td><span class="mono">${node_group.name}</span></td>
                </tr>
                <tr>
                    <td>ID</td><td><span class="mono">${node_group.id}</span></td>
                </tr>
                <tr>
                    <td>Description</td><td><span class="mono">${node_group.description}</span></td>
                </tr>
                <tr>
                    <td>Owner</td><td><span class="mono">${node_group.owner}</span></td>
                </tr>
                <tr>
                    <td>Notes URL</td><td><span class="mono"><a target="_blank" tal:attributes="href '{0}'.format(node_group.notes_url)">${node_group.notes_url}</a></span></td>
                </tr>
                <tr>
                    <td>Created At</td><td><span class="mono">${node_group.created}</span></td>
                </tr>
                <tr>
                    <td>Updated At</td><td><span class="mono">${node_group.updated}</span></td>
                </tr>
                <tr>
                    <td>Updated By</td><td><span class="mono">${node_group.updated_by}</span></td>
                </tr>
            </table>
          </div>
        </li>
        <li>
          <input type="radio" name="tabs" id="tab_hist">
          <label for="tab_hist">History</label>
          <div id="tab-content_hist" class="tab-content">
              <div id="history_insert">
              	<a class="show_history" tal:attributes="href '/node_groups_audit/{0}'.format(node_group.id)">Show history for this node group</a>
              </div>
          </div>
        </li>
      </ul>
    </div>
    
    <div tal:condition="not node_group">
      <div id="page_title_s">
        <span class="page_title_type_s">objects/node_group/</span> <span class="page_title_name_s">Not Found</span>
      </div>
    </div>

    <script>
      $(document).ready(function() {
    
        // History tab ajax loader
        $('.show_history').click(function(event){
            event.preventDefault();
            var url = $(this).attr('href');
            $.ajax({
                url: url,
                success: function(result){
                  $("#history_insert").html(result);
                },
                error: function (jXHR, textStatus, errorThrown) {
                  $("#history_insert").html(errorThrown);
                }
            });
        });
        $(document).ajaxStart(function() {
          $("#history_insert").html('<div id="loading_image_c"><img src="/static/img/ajax-loader.gif"></div>');
        });
    
      });
    </script>

  </body>
</html>

